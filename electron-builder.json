{
  "appId": "com.artiste.catalogue",
  "productName": "CatalogueRaisonne",
  "directories": {
    "output": "dist_electron"
  },
  "files": [
    "dist/**/*",
    "package.json"
  ],
  "asarUnpack": [
    "node_modules/sharp/**",
    "node_modules/better-sqlite3/**"
  ],
  "mac": {
    "target": ["dmg", "zip"],
    "asarUnpack": [
      "node_modules/sharp/**",
      "node_modules/better-sqlite3/**"
    ],
    "artifactName": "${productName}-${version}-${os}.${ext}"
  },
  "npmRebuild": true
}

{
  "appId": "com.artiste.catalogue",
  "productName": "CatalogueRaisonne",
  "directories": {
    "output": "dist_electron"
  },
  "files": [
    "dist/**/*",
    "package.json"
  ],
  "asarUnpack": [
    "node_modules/sharp/**",
    "node_modules/better-sqlite3/**",
    "node_modules/@img/**"
  ],
  "mac": {
  "target": ["dmg", "zip"],
  "artifactName": "${productName}-${version}-${os}.${ext}",
  "icon": "build/icons/icon.icns"
  },
  "extraResources": [
    { "from": "node_modules/@img", "to": "node_modules/@img" }
  ],
  "npmRebuild": true
}

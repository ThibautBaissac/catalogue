{
  "name": "my-catalogue-app",
  "version": "0.1.0",
  "main": "dist/main.js",
  "private": true,
  "scripts": {
    "dev": "npm run build:main && concurrently \"vite\" \"electron .\"",
    "build": "npm run build:main && vite build && electron-builder",
    "build:main": "tsc src/main/**/*.ts --outDir dist --target ES2020 --module commonjs --moduleResolution node --esModuleInterop --allowSyntheticDefaultImports --skipLibCheck && cp src/main/db/schema.sql dist/db/",
    "package": "electron-builder --dir",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "dependencies": {
    "archiver": "^5.3.0",
    "better-sqlite3": "^12.2.0",
    "electron": "^28.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "sharp": "^0.32.0",
    "unzipper": "^0.12.3",
    "zustand": "^4.0.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.2",
    "@types/archiver": "^6.0.3",
    "@types/babel__core": "^7.20.5",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^3.0.0",
    "concurrently": "^9.2.0",
    "electron-builder": "^24.0.0",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.0.0",
    "tailwindcss": "^3.0.0",
    "typescript": "^5.0.0",
    "vite": "^4.0.0"
  }
}

{
  "name": "catalogue",
  "version": "0.1.0",
  "main": "dist/main/main.js",
  "private": true,
  "scripts": {
  "dev": "npm run build:main && concurrently \"vite\" \"NODE_ENV=development electron .\"",
  "build": "npm run build:main && vite build && electron-builder",
  "build:main": "tsc src/main/*.ts src/main/**/*.ts --rootDir src --outDir dist --target ES2020 --module commonjs --moduleResolution node --esModuleInterop --allowSyntheticDefaultImports --skipLibCheck && mkdir -p dist/main/db && cp src/main/db/schema.sql dist/main/db/",
  "seed:images": "npm run build:main && NODE_ENV=development electron dist/scripts/seedImages.js",
    "package": "electron-builder --dir",
    "lint": "eslint . --ext .ts,.tsx",
  "rebuild": "echo 'use electron-builder install-app-deps if needed'"
  },
  "dependencies": {
  "archiver": "^5.3.0",
  "better-sqlite3": "^12.2.0",
  "react": "^18.0.0",
  "react-dom": "^18.0.0",
  "sharp": "^0.33.4",
  "unzipper": "^0.12.3",
  "zustand": "^4.0.0"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.3",
    "@types/babel__core": "^7.20.5",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^3.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "electron-builder": "^24.0.0",
  "electron": "^28.0.0",
    "eslint": "^8.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.0.0",
    "typescript": "^5.0.0",
    "vite": "^4.0.0"
  }
}
